<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtSong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="49dp"
        android:text="@string/txtMusicTitleOne"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnColdPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSong1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:text="@string/btnColdPlay2" />

    <TextView
        android:id="@+id/txtMusicTitleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSong1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        android:text="@string/txtMusicTitleTwo"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnColdPlay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSong1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:text="@string/btnColdPlay2" />

</RelativeLayout>